{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "0.1.0",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://band.us/band/*/member"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "default_locale": "ko",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}
